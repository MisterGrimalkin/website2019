<div class="my-sidebar">
  <a href="/">
    <div class="my-name">Barri Mason</div>
    <div class="my-tag">Freelance Coder</div>
  </a>
  <nav class="nav">
    <a href="https://www.linkedin.com/in/barri-mason-8b6ab435/"
       target="_blank" title="Visit me on LinkedIn">
      <%= image_tag 'linkedin-white.png', size: 32 %>
    </a>
    <a href="https://www.peopleperhour.com/freelancer/development-it/barri-mason-software-developer-ymvmaja"
       target="_blank" title="Visit me on PeoplePerHour">
      <%= image_tag 'pph.png', size: 32 %>
    </a>
    <a href="https://github.com/MisterGrimalkin"
       target="_blank" title="Visit me on GitHub">
      <%= image_tag 'GitHub-Mark-Light-32px.png', alt: 'Visit me on GitHub' %>
    </a>
    <a class="contact-btn" title="Contact me">
      <%= image_tag 'envelope.png', alt: 'Visit me on GitHub' %>
    </a>
  </nav>
  <!-- Notices -->
  <% if user_signed_in? %>
      <div>
        <% if current_user.admin %>
            <%= link_to('Admin', '/admin', method: :get) %>
            <br/>
        <% end %>
        <%= link_to('My Account', edit_user_registration_path, method: :get) %>
        <br/>
        <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>
      </div>
  <% end %>
  <!-- Notice -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<script>
  $(function () {
    // Animate social icons
    var $nava = $("nav a");
    $nava
        .mouseover(function () {
          $nava.not(this).stop().animate({opacity: 0.5}, 600);
        })
        .mouseout(function () {
          $nava.stop().animate({opacity: 1.0}, 200);
        });

    // Fade out notices
    setTimeout(function(){
      $(".notice").fadeOut(2000, function(){
        $(".notice").text("").fadeIn();
      });
    }, 5000);
  });
</script>
