<div id="contact-dialog" title="Contact Me" style="display: none;">
  <%= form_tag '/contact_me' do %>
    <div class="row">
      <div class="u-full-width">
        <label for="name">Your name</label>
        <input class="u-full-width" type="text" name="name" id="name">
      </div>
      <div class="u-full-width">
        <label for="email">Your email</label>
        <input class="u-full-width" type="email" name="email" id="email">
      </div>
    </div>
    <label for="message">Message</label>
    <textarea class="u-full-width" placeholder="Hi Barriâ€¦" name="message" id="message"></textarea>
    <input id="send-contact" class="button-primary" type="submit" value="Send">
    <input id="cancel-contact" class="button" type="button" value="Cancel">
  <% end %>
</div>

<script>
  $(function() {
    $("#contact-btn").click(function() {
          $("#contact-dialog").dialog({
            dialogClass: '#no-close',
            width: '70%',
            modal: true,
            draggable: true,
            resizable: true
          });
        }
    );
    $("#send-contact").click(function() {
      $("#contact-dialog").dialog("close");
    });
    $("#cancel-contact").click(function() {
        $("#contact-dialog").dialog("close");
    });

  });
</script>
