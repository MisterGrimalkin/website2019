<!DOCTYPE html>
<html>
<head>

  <meta charset="utf-8">
  <title>Barri Mason Freelance Coder</title>
  <meta name="description" content="Barri Mason is a freelance software engineer and tech tinkerer">
  <meta name="author" content="Barri Mason">

  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js', 'data-turbolinks-track' => 'reload' %>

  <% if ENV['ENABLE_GOOGLE_ANALYTICS'] %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-147082378-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-147082378-1');
      </script>
  <% end %>

  <!-- jQuery -->
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

  <!-- Skeleton -->
  <%= stylesheet_link_tag 'normalize', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= stylesheet_link_tag 'skeleton', media: 'all', 'data-turbolinks-track' => 'reload' %>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Bai+Jamjuree|Rock+Salt|Orbitron&display=swap" rel="stylesheet">

</head>

<body>

<%= render partial: 'shared/sidebar' %>
<%= render partial: 'shared/contact' %>

<div class="content">
  <%= yield %>
</div>

<!-- Large image viewer -->
<div class="image-viewer">
  <img id="viewed-image" src=""/>
</div>

</body>
</html>

<script>
  $(function () {
    // Image viewer
    $(".image-viewer").click(function() {
      $(".image-viewer").fadeOut(200);
    });
    $(".project-page img").click(function() {
      $("#viewed-image").attr("src", $(this).attr("src"));
      $(".image-viewer").fadeIn(200);
    });
  });
</script>
